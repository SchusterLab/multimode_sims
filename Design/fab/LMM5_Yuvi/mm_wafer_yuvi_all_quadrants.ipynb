# Function to replicate a design across all 4 quadrants
def replicate_to_all_quadrants(wafer, design_function, *args, **kwargs):
    """
    Replicates a design across all 4 quadrants of the wafer.
    
    Parameters:
    -----------
    wafer : Device
        The wafer device to add the designs to
    design_function : function
        The function that creates the design in one quadrant
    *args, **kwargs : 
        Arguments to pass to the design_function
        
    Returns:
    --------
    wafer : Device
        The wafer with the design replicated in all 4 quadrants
    """
    # Create a temporary device to hold the original design
    temp_device = Device("temp")
    
    # Call the design function on the temporary device
    design_function(temp_device, *args, **kwargs)
    
    # Add the original design to the first quadrant (top-right)
    wafer << temp_device
    
    # Create mirrored versions for other quadrants
    # Second quadrant (top-left): Mirror horizontally
    temp_device_h = temp_device.copy()
    temp_device_h.mirror(p1=(0,0), p2=(0,1))  # Mirror across y-axis
    wafer << temp_device_h
    
    # Third quadrant (bottom-left): Mirror horizontally and vertically
    temp_device_hv = temp_device.copy()
    temp_device_hv.mirror(p1=(0,0), p2=(0,1))  # Mirror across y-axis
    temp_device_hv.mirror(p1=(0,0), p2=(1,0))  # Mirror across x-axis
    wafer << temp_device_hv
    
    # Fourth quadrant (bottom-right): Mirror vertically
    temp_device_v = temp_device.copy()
    temp_device_v.mirror(p1=(0,0), p2=(1,0))  # Mirror across x-axis
    wafer << temp_device_v
    
    return wafer

# Divide  chip into quadrants 
def create_boxes(num_rows, num_cols, box_size, spacing, wafer, x_offset=0, y_offset=0):

    # Create an array of boxes

    for row in range(num_rows):

        for col in range(num_cols):

            box_device = pg.rectangle(size=box_size, layer=5)  # Create the box

            # Calculate the position with the provided offsets

            box_x_offset = x_offset + col * (box_size[0] + spacing)

            box_y_offset = y_offset + row * (box_size[1] + spacing)

            box_device.move((box_x_offset - (num_cols * box_size[0] + (num_cols - 1) * spacing) / 2,

                              box_y_offset - (num_rows * box_size[1] + (num_rows - 1) * spacing) / 2))  # Center the array around the provided offsets

            wafer << box_device  # Add box to the wafer layout

# finally just some lines for cleaving wafer to quadrants

create_boxes(num_rows =1, num_cols =1, box_size = (wafer_radius*2, 100), spacing = 0,

